<data>

    <xpath
        expr="/form/notebook/page[@id='general']/field[@name='addresses']"
        position="before">
        <separator string="VAT" colspan="4" id="vat"/>
        <label name="vat_number"/>
        <field name="vat_number"/>
    </xpath>
    <xpath
        expr="/form/notebook/page[@id='general']/label[@name='vat_number']"
        position="before">
        <label name="type_document"/>
        <field name="type_document"/>
    </xpath>

     <xpath
        expr="/form/notebook/page[@id='general']/field[@name='vat_number']"
        position="after">
        <newline/> 
        <label name="mandatory_accounting"/>
        <field name="mandatory_accounting"/>
    </xpath>
    <xpath
        expr="/form/notebook/page[@id='general']/field[@name='mandatory_accounting']"
        position="after">
        <label name="contribuyente_especial"/>
        <field name="contribuyente_especial"/>
    </xpath>
    <xpath
        expr="/form/notebook/page[@id='general']/field[@name='contribuyente_especial']"
        position="after">
        <label name="contribuyente_especial_nro"/>
        <field name="contribuyente_especial_nro"/>
        <newline/> 
    </xpath>
    
    <xpath
        expr="/form/notebook/page[@id='accounting']/separator[@id='vat']"
        position="replace">
    </xpath>
    <xpath
        expr="/form/notebook/page[@id='accounting']/field[@name='vat_number']"
        position="replace">
    </xpath>
    
    <xpath
        expr="/form/notebook/page[@id='accounting']/label[@name='vat_number']"
        position="replace">
    </xpath>
    <xpath
        expr="/form/notebook/page[@id='accounting']/field[@name='vat_country']"
        position="replace">
    </xpath>
    <xpath
        expr="/form/notebook/page[@id='accounting']/label[@name='vat_country']"
        position="replace">
    </xpath>
    
    <xpath
        expr="/form/notebook/page[@id='accounting']/field[@name='customer_tax_rule']"
        position="replace">
    </xpath>
    <xpath
        expr="/form/notebook/page[@id='accounting']/label[@name='customer_tax_rule']"
        position="replace">
    </xpath>
    
     <xpath
        expr="/form/notebook/page[@id='accounting']/field[@name='supplier_tax_rule']"
        position="replace">
    </xpath>
    <xpath
        expr="/form/notebook/page[@id='accounting']/label[@name='supplier_tax_rule']"
        position="replace">
    </xpath>
    
    <xpath
        expr="/form/notebook/page[@id='accounting']/separator[@id='taxes']"
        position="replace">
    </xpath>
   
</data>
